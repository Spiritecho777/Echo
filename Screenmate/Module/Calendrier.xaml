<Window x:Class="Screenmate.Module.Calendrier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenmate"
        mc:Ignorable="d"
        Title="Calendrier" Height="450" Width="800"
        Background="LightGray" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize">

    <Window.Resources>
        <ContextMenu x:Key="CalendarContextMenu">
            <MenuItem Header="Ajouter rappel" Click="AddRappel_Click"/>
            <MenuItem Header="Supprimer rappel" Click="DelRappel_Click"/>
            <MenuItem Header="Modifier rappel" Click="ModifyRappel_Click"/>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <Calendar x:Name="calendar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" PreviewMouseRightButtonDown="OptionsContext_Calendar"/>
    </Grid>
</Window>

<Window x:Class="Screenmate.Module.Calendrier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenmate"
        mc:Ignorable="d"
        Title="Calendrier" Height="400" Width="800"
        Background="LightGray" ShowInTaskbar="False" ResizeMode="NoResize">

    <Window.Resources>
        <ContextMenu x:Key="CalendarContextMenu">
            <MenuItem Header="Ajouter rappel" Click="AddRappel_Click"/>
            <MenuItem Header="Supprimer rappel" Click="DelRappel_Click"/>
            <MenuItem Header="Modifier rappel" Click="ModifyRappel_Click"/>
        </ContextMenu>
    </Window.Resources>

        <Grid>
        <Viewbox Stretch="Uniform" StretchDirection="Both" HorizontalAlignment="Left" >
            <Calendar x:Name="calendar" SelectionMode="MultipleRange" PreviewMouseRightButtonDown="OptionsContext_Calendar">
                <Calendar.SelectedDates>

                </Calendar.SelectedDates>
            </Calendar>
        </Viewbox>
    </Grid>
</Window>

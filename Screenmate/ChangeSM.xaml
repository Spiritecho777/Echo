<Window x:Class="Screenmate.ChangeSM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenmate"
        mc:Ignorable="d"
        Title="Changer de Screenmate" Height="370" Width="400">
    <Grid>
        <ListBox x:Name="SMChoix" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="Add" Content="Ajouter" HorizontalAlignment="Left" Height="31" Margin="10,315,0,0" VerticalAlignment="Top" Width="78"/>
        <Button x:Name="Del" Content="Supprimer" HorizontalAlignment="Left" Height="31" Margin="132,315,0,0" VerticalAlignment="Top" Width="78"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="150" Margin="227,10,0,0" VerticalAlignment="Top" Width="150">
            <Image x:Name="PreviewImage" Stretch="UniformToFill"/>
        </Border>
        <Button x:Name="Back" Content="Retour" HorizontalAlignment="Left" Height="29" Margin="319,317,0,0" VerticalAlignment="Top" Width="71"/>
        <Button x:Name="Accept" Content="Valider" HorizontalAlignment="Left" Height="29" Margin="243,317,0,0" VerticalAlignment="Top" Width="71"/>
    </Grid>
</Window>

<UserControl x:Class="Screenmate.Control.DaysControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Screenmate.Control"
             mc:Ignorable="d" 
             Height="50" Width="88"
             Background="GhostWhite">


    <Grid>
        <Border x:Name="border" BorderBrush="Transparent" BorderThickness="1" Background="Transparent"/>
        <Label x:Name="NumberDays" Content="00" Margin="0"/>
        <Ellipse x:Name="Flag" Margin="72,1,1,34" Fill="red" Visibility="Hidden"/>
    </Grid>
</UserControl>
